{
  "manifest_version": 3,
  "name": "phishing-detection",
  "version": "1.1.0",
  "description": "Phát hiện và chặn website phishing sử dụng AI và cơ sở dữ liệu.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  
  "action": {
    "default_title": "Phishing Detection",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html"
}
